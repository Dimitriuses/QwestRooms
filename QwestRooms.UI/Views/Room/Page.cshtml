@using QwestRooms.UI.Models

@model IndexViewModel

@{
    ViewBag.Title = "Page";
}


<a class="btn btn-primary" data-toggle="collapse" href="#Filter" role="button" aria-expanded="false" aria-controls="Filter">Filters</a>
<div class="collapse multi-collapse" id="Filter">
    <div class="card card-body">
        <div class="row">
            <div class="col border border-success">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"><span class="checkbox-decorator"><span class="check"></span></span> Adress
                    </label>
                </div>
                <div class="dropdown">
                    @*@Ajax.ActionLink("Country", "GetAllCountry", new AjaxOptions { UpdateTargetId = "Countries" }@*, new {@class = "btn btn-secondary dropdown-toggle", @type = "button", @id = "dropdownMenu2" *@
                    <label>Country</label>
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuCountry" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Не вказано
                    </button>
                    <div id="Countries" class="dropdown-menu" aria-labelledby="dropdownMenu2" style=" overflow:auto; height:300px">
                        @{
                            Html.RenderPartial("CountryColectionViev", ViewData["CountriData"]);
                        }
                    </div>
                </div>
                <script>
                    $('.country').click(function () {
                        console.log($(this).attr('id') + $(this).text());
                        $('#dropdownMenuCountry').text($(this).text());
                        $('#dropdownMenuCities').text("Не Вказано");
                        $('#dropdownMenuHome').text("Не Вказано");
                    });
                </script>
                <div class="dropdown">
                    <label>City</label>
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuCities" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Не вказано
                    </button>
                    <div id="Cities" class="dropdown-menu" aria-labelledby="dropdownMenu2" style=" overflow:auto; height:300px">

                    </div>
                </div>
                <div class="dropdown">
                    <label>Home</label>
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuHome" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Не вказано
                    </button>
                    <div id="Homes" class="dropdown-menu" aria-labelledby="dropdownMenu2">

                    </div>
                </div>
            </div>
            <div class="col">

            </div>
            <button id="filterbtn" class="btn btn-primary"></button>
            @Ajax.ActionLink("Filter", "Filter", null , new AjaxOptions { UpdateTargetId = "rooms" });
            <script>
                $('#filterbtn').click(function () {
                    //console.log('@ViewBag.CountryId');
                    //console.log("CountryId = " + '@Session["CountryId"]' + " || CityId = " + '@Session["CityId"]' + " || HomeId = " + '@Session["HomeId"]');
                })
            </script>
        </div>
    </div>
</div>
<div id="result">

    <div id="rooms">

      @{ 
          Html.RenderPartial("RoomsCollectionView", Model);
      }
    </div>
    
</div>

